{
  "data_path": "data/ionic_conductivity_dataset_with_graphs.pkl",
  "prop_name": "ionic_conductivity",
  "train_ratio": 0.8,
  "val_ratio": 0.1,
  "test_ratio": 0.1,
  "use_stratified_split": true,
  "n_bins_stratify": 10,
  "hidden_dim": 256,
  "num_layers": 6,
  "num_heads": 8,
  "dropout": 0.2,
  "cutoff": 8.0,
  "max_neighbors": 20,
  "batch_size": 16,
  "learning_rate": 0.0001,
  "weight_decay": 0.0001,
  "num_epochs": 300,
  "patience": 30,
  "min_delta": 1e-05,
  "use_scheduler": true,
  "scheduler_type": "reduce_on_plateau",
  "scheduler_factor": 0.5,
  "scheduler_patience": 15,
  "scheduler_step_size": 50,
  "use_cross_validation": false,
  "cv_folds": 5,
  "log_epsilon": 1e-20,
  "conductivity_threshold": 1e-12,
  "output_dir": "outputs/fast_gpu_cgcnn",
  "save_every": 10,
  "log_every": 5,
  "device": "auto"
